## no -e for dialog buttons
set -uo pipefail
IFS=$'\n\t'

##
## Configuration
##

CONFIGURATION_FILE="/etc/i-doit/i-doit.sh"

: "${DIALOG_OK=0}"
: "${DIALOG_CANCEL=1}"
: "${DIALOG_HELP=2}"
: "${DIALOG_EXTRA=3}"
: "${DIALOG_ITEM_HELP=4}"
: "${DIALOG_ESC=255}"

function execute {
    local applianceVersion=""
    local key=""
    local status=0

    exec 3>&1

    applianceVersion="$(cat /etc/appliance_version)"

    key=$(dialog \
        --title "i-doit" \
        --backtitle "i-doit virtual appliance ${applianceVersion}" \
        --ok-label "Enter" \
        --extra-button \
        --extra-label "Main menu" \
        --cancel-button "Exit" \
        --menu "Use arrows UP/DOWN\\nPress [Enter] to select" \
        23 43 14 \
        "B" "Backup i-doit" \
        "R" "Restore latest backup" \
        "J" "Run background jobs manually" \
        "S" "Create support zip file" \
        2>&1 1>&3
    );

    status="$?"

    exec 3>&-

    case "$status" in
        "$DIALOG_OK")
            case "$key" in
                "U")
                    # TODO Update to latest version:
                    abort "Not implemented yet"
                    ;;
                "A")
                    ## TODO Install/update i-doit add-ons:
                    abort "Not implemented yet"
                    ;;
                "B")
                    idoit-backup || \
                        abort "Exiting"
                    ;;
                "R")
                    idoit-restore || \
                        abort "Exiting"
                    ;;
                "J")
                    idoit-jobs || \
                        abort "Exiting"
                    ;;
                "S")
                    idoit-support || \
                        abort "Exiting"
                    ;;
                "M")
                    ## TODO Move i-doit to/from another system:
                    abort "Not implemented yet"
                    ;;
                *)
                    abort "Unknown choice"
            esac
            ;;
        "$DIALOG_EXTRA")
            appliance-menu
            exit 0
            ;;
        "$DIALOG_CANCEL")
            exit 0
            ;;
        "$DIALOG_ESC")
            exit 0
            ;;
        *)
            abort "Unknown action"
            ;;
    esac

    execute
}

function setup {
    test "$(whoami)" = "root" || \
        abort "Only user 'root' may execute this script"

    test -f "$CONFIGURATION_FILE" || \
        abort "Missing configuration file '${CONFIGURATION_FILE}'"

    # shellcheck source=/dev/null
    source "$CONFIGURATION_FILE" || \
        abort "Unable to include configuration file"
}

function log {
    echo -e "$1"
}

function finish {
    printf "\\033c"
}

function abort {
    echo -e "$1" 1>&2
    exit 1
}

##--------------------------------------------------------------------------------------------------

if [[ "${BASH_SOURCE[0]}" = "$0" ]]; then
    setup && execute && finish
fi
