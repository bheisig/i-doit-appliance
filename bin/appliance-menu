## no -e for dialog buttons
set -uo pipefail
IFS=$'\n\t'

##
## Configuration
##

: "${DIALOG_OK=0}"
: "${DIALOG_CANCEL=1}"
: "${DIALOG_HELP=2}"
: "${DIALOG_EXTRA=3}"
: "${DIALOG_ITEM_HELP=4}"
: "${DIALOG_ESC=255}"

function execute {
    local applianceVersion=""
    local key=""
    local status=0

    exec 3>&1

    applianceVersion="$(cat /etc/appliance_version)"

    key=$(dialog \
        --title "Main menu" \
        --backtitle "i-doit virtual appliance ${applianceVersion}" \
        --ok-label "Enter" \
        --cancel-button "Exit" \
        --menu "Use arrows UP/DOWN\\nPress [Enter] to select" \
        23 43 14 \
        "I" "i-doit" \
        "C" "Configuration" \
        "T" "Tools and services" \
        "A" "About" \
        "X" "Logout" \
        2>&1 1>&3
    );

    status="$?"

    exec 3>&-

    case "$status" in
        "$DIALOG_OK")
            case "$key" in
                "I")
                    appliance-menu-idoit
                    ;;
                "C")
                    appliance-menu-configuration
                    ;;
                "T")
                    appliance-menu-tools
                    ;;
                "A")
                    appliance-about | less
                    execute
                    ;;
                "X")
                    logout
                    ;;
                *)
                    abort "Unknown choice"
            esac
            ;;
        "$DIALOG_CANCEL")
            exit 0
            ;;
        "$DIALOG_ESC")
            exit 0
            ;;
        *)
            abort "Unknown action"
            ;;
    esac
}

function setup {
    test "$(whoami)" = "root" || \
        abort "Only user 'root' may execute this script"
}

function log {
    echo -e "$1"
}

function finish {
    printf "\\033c"
}

function abort {
    echo -e "$1" 1>&2
    exit 1
}

##--------------------------------------------------------------------------------------------------

if [[ "${BASH_SOURCE[0]}" = "$0" ]]; then
    setup && execute && finish
fi
